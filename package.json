{
  "name": "bastet-framework",
  "version": "0.0.1",
  "description": "Program Analysis Framework",
  "main": "main.js",
  "scripts": {
    "antlr4ts": "antlr4ts -visitor src/bastet/syntax/parser/grammar/Leila.g4",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "start": "node dist/src/main.js $*",
    "build": "pnpm build:no-lint && pnpm lint",
    "build:no-lint": "pnpm build:ts && pnpm copy-static-assets",
    "build:ts": "tsc --incremental",
    "serve": "pnpm start",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"pnpm watch:ts\" \"pnpm watch:node\"",
    "watch:node": "nodemon dist/main.js",
    "watch:test": "pnpm test -- --watchAll",
    "watch:ts": "tsc -w",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"pnpm watch:ts\" \"pnpm serve-debug\"",
    "test": "pnpm build-no-lint && jest --forceExit --coverage --silent=true",
    "upgrade-all-packages": "pnpm upgrade",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "pnpm build && pnpm watch:debug",
    "serve-debug": "nodemon --inspect dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:se2p/bastet.git"
  },
  "keywords": [
    "program analysis",
    "abstract interpretation",
    "model checking",
    "verification",
    "data flow",
    "testing"
  ],
  "author": "University of Passau, and the contributors",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-sinon": "^4.0.0",
    "eslint-plugin-ie11": "^1.0.0",
    "eslint-plugin-jsdoc": "^46.8.1",
    "eslint-plugin-local-rules": "^2.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.198",
    "acorn": "^8.10.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "colormap": "^2.3.2",
    "commander": "^11.0.0",
    "core-util-is": "^1.0.3",
    "heap-js": "^2.3.0",
    "image-size": "^1.0.2",
    "immutable": "^5.0.0-beta.4",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "toposort": "^2.0.2",
    "typescript-logging": "^2.1.0",
    "wasm-ts": "^0.1.3"
  }
}
